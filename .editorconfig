# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
trim_trailing_whitespace = false
max_line_length = 0

[*.{yml,yaml}]
indent_size = 2

[{package.json,*.json}]
indent_size = 2

[*.{ts,tsx,js,jsx}]
indent_size = 2
