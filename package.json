{
  "name": "flopods",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "description": "AI Workflow Canvas - Multi-LLM Node-Based Platform",
  "author": "Zahid Khan",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:backend": "turbo run dev --filter=@flopods/backend",
    "dev:frontend": "turbo run dev --filter=@flopods/frontend",
    "build": "turbo run build",
    "build:schema": "turbo run build --filter=@flopods/schema",
    "build:backend": "turbo run build --filter=@flopods/backend",
    "build:frontend": "turbo run build --filter=@flopods/frontend",
    "start": "turbo run start",
    "start:backend": "yarn workspace @flopods/backend start",
    "start:frontend": "yarn workspace @flopods/frontend start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:backend": "turbo run lint --filter=@flopods/backend",
    "lint:frontend": "turbo run lint --filter=@flopods/frontend",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:cov": "turbo run test:cov",
    "test:backend": "yarn workspace @flopods/backend test",
    "test:e2e": "yarn workspace @flopods/backend test:e2e",
    "clean": "turbo run clean && rimraf node_modules .turbo",
    "clean:all": "yarn clean && rimraf **/node_modules **/.turbo **/dist",
    "clean:turbo": "rimraf .turbo",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md,yaml,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md,yaml,yml}\"",
    "db:generate": "turbo run db:generate",
    "db:migrate": "yarn workspace @flopods/schema db:migrate",
    "db:migrate:create": "yarn workspace @flopods/schema prisma migrate dev --create-only",
    "db:migrate:deploy": "yarn workspace @flopods/schema prisma migrate deploy",
    "db:push": "yarn workspace @flopods/schema db:push",
    "db:pull": "yarn workspace @flopods/schema prisma db pull",
    "db:studio": "yarn workspace @flopods/schema db:studio",
    "db:seed:pricing": "yarn workspace @flopods/schema db:seed:pricing",
    "db:reset": "yarn workspace @flopods/schema prisma migrate reset",
    "db:validate": "yarn workspace @flopods/schema prisma validate",
    "db:format": "yarn workspace @flopods/schema prisma format",
    "docker:db:up": "docker compose -f docker/db-docker-compose.yaml up -d",
    "docker:db:down": "docker compose -f docker/db-docker-compose.yaml down",
    "docker:db:restart": "yarn docker:db:down && yarn docker:db:up",
    "docker:db:logs": "docker compose -f docker/db-docker-compose.yaml logs -f",
    "docker:db:clean": "docker compose -f docker/db-docker-compose.yaml down -v",
    "docker:db:ps": "docker compose -f docker/db-docker-compose.yaml ps",
    "docker:dynamodb:up": "docker compose -f docker/dynamodb-docker-compose.yaml up -d",
    "docker:dynamodb:down": "docker compose -f docker/dynamodb-docker-compose.yaml down",
    "docker:dynamodb:restart": "yarn docker:dynamodb:down && yarn docker:dynamodb:up",
    "docker:dynamodb:logs": "docker compose -f docker/dynamodb-docker-compose.yaml logs -f",
    "docker:dynamodb:clean": "docker compose -f docker/dynamodb-docker-compose.yaml down -v",
    "docker:redis:up": "docker compose -f docker/redis-docker-compose.yaml up -d",
    "docker:redis:down": "docker compose -f docker/redis-docker-compose.yaml down",
    "docker:redis:logs": "docker compose -f docker/redis-docker-compose.yaml logs -f",
    "docker:localstack:up": "docker compose -f docker/localstack-docker-compose.yaml up -d",
    "docker:localstack:down": "docker compose -f docker/localstack-docker-compose.yaml down",
    "docker:localstack:restart": "yarn docker:localstack:down && yarn docker:localstack:up",
    "docker:localstack:logs": "docker compose -f docker/localstack-docker-compose.yaml logs -f",
    "docker:localstack:clean": "docker compose -f docker/localstack-docker-compose.yaml down -v",
    "docker:dev": "yarn docker:db:up && yarn docker:redis:up && yarn docker:localstack:up",
    "docker:dev:down": "yarn docker:db:down && yarn docker:redis:down && yarn docker:localstack:down",
    "docker:dev:clean": "yarn docker:db:clean && yarn docker:redis:clean && yarn docker:localstack:clean",
    "podman:db:up": "podman-compose -f docker/db-docker-compose.yaml up -d",
    "podman:db:down": "podman-compose -f docker/db-docker-compose.yaml down",
    "podman:db:restart": "yarn podman:db:down && yarn podman:db:up",
    "podman:db:logs": "podman-compose -f docker/db-docker-compose.yaml logs -f",
    "podman:db:clean": "podman-compose -f docker/db-docker-compose.yaml down -v",
    "podman:db:ps": "podman-compose -f docker/db-docker-compose.yaml ps",
    "podman:dynamodb:up": "podman-compose -f docker/dynamodb-docker-compose.yaml up -d",
    "podman:dynamodb:down": "podman-compose -f docker/dynamodb-docker-compose.yaml down",
    "podman:dynamodb:restart": "yarn podman:dynamodb:down && yarn podman:dynamodb:up",
    "podman:dynamodb:logs": "podman-compose -f docker/dynamodb-docker-compose.yaml logs -f",
    "podman:dynamodb:clean": "podman-compose -f docker/dynamodb-docker-compose.yaml down -v",
    "podman:redis:up": "podman-compose -f docker/redis-docker-compose.yaml up -d",
    "podman:redis:down": "podman-compose -f docker/redis-docker-compose.yaml down",
    "podman:redis:logs": "podman-compose -f docker/redis-docker-compose.yaml logs -f",
    "podman:localstack:up": "podman-compose -f docker/localstack-docker-compose.yaml up -d",
    "podman:localstack:down": "podman-compose -f docker/localstack-docker-compose.yaml down",
    "podman:localstack:restart": "yarn podman:localstack:down && yarn podman:localstack:up",
    "podman:localstack:logs": "podman-compose -f docker/localstack-docker-compose.yaml logs -f",
    "podman:localstack:clean": "podman-compose -f docker/localstack-docker-compose.yaml down -v",
    "podman:dev": "yarn podman:db:up && yarn podman:redis:up && yarn podman:localstack:up",
    "podman:dev:down": "yarn podman:db:down && yarn podman:redis:down && yarn podman:localstack:down",
    "podman:dev:clean": "yarn podman:db:clean && yarn podman:redis:clean && yarn podman:localstack:clean",
    "install:all": "yarn install",
    "reinstall": "yarn clean:all && yarn install",
    "prepare": "husky install || true",
    "check": "yarn type-check && yarn lint && yarn format:check",
    "fix": "yarn lint:fix && yarn format"
  },
  "devDependencies": {
    "@flopods/eslint-config": "*",
    "@types/node": "^24.7.2",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.5.8",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@4.10.3",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "tailwindcss": "^4.1.14"
  }
}
